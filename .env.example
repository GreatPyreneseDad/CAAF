# Coherence-Aware AI Framework Environment Variables

# API Keys for LLM Integration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
# For production, use PostgreSQL: postgresql://user:password@localhost/caaf
CAAF_DATABASE_URL=sqlite:///caaf_metrics.db

# API Configuration
CAAF_API_HOST=0.0.0.0
CAAF_API_PORT=8000

# Metrics Configuration
CAAF_RETENTION_DAYS=90
CAAF_ENABLE_AGGREGATION=true
CAAF_ANONYMIZE_AFTER_DAYS=30

# Security
CAAF_API_KEY=your_secure_api_key_here
CAAF_ENABLE_CORS=true
CAAF_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# Logging
CAAF_LOG_LEVEL=INFO
CAAF_LOG_FILE=caaf.log

# Feature Flags
CAAF_ENABLE_CRISIS_DETECTION=true
CAAF_ENABLE_AUTO_OPTIMIZATION=true
CAAF_ENABLE_PATTERN_ANALYSIS=true